{
	"$schema": "https://railway.app/railway.schema.json",
	"build": {
		"builder": "NIXPACKS",
		"buildCommand": "pnpm run build",
		"nixpacksConfig": {
			"variables": {
				"NODE_VERSION": "22"
			}
		}
	},
	"deploy": {
		"startCommand": "node build/index.js",
		"restartPolicyType": "ON_FAILURE",
		"restartPolicyMaxRetries": 10
	}
}

